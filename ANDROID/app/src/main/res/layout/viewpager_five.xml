<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/viewpager_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:contentPadding="0dp"
        app:cardPreventCornerOverlap="false"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/ko_text1"
                        android:textColor="#505050"
                        android:text="일"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanumsquareb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/ch_text1"
                        android:textColor="#505050"
                        android:text="일"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/ko_mean1"
                        android:textColor="#505050"
                        android:text="한 일"
                        android:textSize="10sp"
                        android:fontFamily="@font/nanumsquareb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/ko_text2"
                        android:textColor="#505050"
                        android:text="일"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanumsquareb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/ch_text2"
                        android:textColor="#505050"
                        android:text="일"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/ko_mean2"
                        android:textColor="#505050"
                        android:text="한 일"
                        android:textSize="10sp"
                        android:fontFamily="@font/nanumsquareb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/ko_text3"
                        android:textColor="#505050"
                        android:text="일"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanumsquareb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/ch_text3"
                        android:textColor="#505050"
                        android:text="일"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/ko_mean3"
                        android:textColor="#505050"
                        android:text="한 일"
                        android:textSize="10sp"
                        android:fontFamily="@font/nanumsquareb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/ko_text4"
                        android:textColor="#505050"
                        android:text="일"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanumsquareb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/ch_text4"
                        android:textColor="#505050"
                        android:text="일"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/ko_mean4"
                        android:textColor="#505050"
                        android:text="한 일"
                        android:textSize="10sp"
                        android:fontFamily="@font/nanumsquareb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/ko_text5"
                        android:textColor="#505050"
                        android:text="일"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanumsquareb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/ch_text5"
                        android:textColor="#505050"
                        android:text="일"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/ko_mean5"
                        android:textColor="#505050"
                        android:text="한 일"
                        android:textSize="10sp"
                        android:fontFamily="@font/nanumsquareb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_height="0.5dp"
                android:background="#D6D6D6"
                android:layout_gravity="center"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="뜻"
                    android:textSize="14sp"
                    android:textColor="#505050"
                    android:fontFamily="@font/nanumsquarer"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:lineSpacingMultiplier="1.35"
                    android:maxLines="8"
                    android:layout_marginTop="48dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="48dp"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/favorite_button"
                    android:background="@drawable/ic_favorite_border_black_24dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="32dp"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>